

{{#if @model}}
    
     <section class="container pt-6 pb-12">
          <h2 class="text-3xl font-bold py-6 text-gray-800">Saved Favorites</h2>
     <section class="grid md:grid-cols-2 lg:grid-cols-3 gap-5 sm:grid-cols-2 grid-cols-1">
         {{#each @model as |item|}}
        <LinkTo @route='property' @query={{hash estateID=item.EstateID}} class="rounded-lg b-gray hover:shadow-xl transform hover:-translate-y-1 p-2 anim">
              <div style={{safe-string (concat "background-image: url('" item.Pictures.[0].UrlLarge "')" )}} class="relative h-64 w-full rounded-lg bg-cover">
                <div class="absolute bottom-0 right-0 mr-0 mb-2 text-xl text-white px-4 py-1 font-bold bg-black rounded-l-lg">{{item.Currency}} {{parse-price item.Price}}</div>
              </div>
          
            <div class="p-3">
                <h3 class="text-xl font-bold">{{item.City}}</h3>
                <div class="text-sm text-gray-600 pb-2 font-bold">{{category-converter item.CategoryId}} {{item.Purposes.[0].Name}}</div>
                 <div class="flex py-2">
                    <div class="inline-block pr-3 text-sm text-gray-600 border-r flex items-end">
                        <img src="../../assets/vector/bed.svg" alt="icon of a bed" class="mr-4">
                        <span>{{item.Rooms}}</span> 
                      
                    </div>
                    <div class="inline-block px-3 text-sm text-gray-600 border-r flex items-end">
                        <img src="../../assets/vector/bath.svg" alt="icon of a bath" class="mr-4 h-5">
                        <span> {{item.BathRooms}} </span>
                    </div>
                    <div class="inline-block px-3 text-sm text-gray-600 border-r flex items-end">
                        <img src="../../assets/vector/area.svg" alt="icon of a bath" class="mr-4 h-5">
                        <span>{{item.Area}} mÂ²</span>
                        

                    </div>
                    
                </div>
            </div>
        </LinkTo>
              {{/each}}
        </section>
        
        </section>

    {{else }}

        <main class="container py-6 flex flex-col justify-center items-center text-center min-h">
            <h1 class="font-bold text-3xl">You currently do not have any properties saved.</h1>
            <p class="font-bold py-3 md:py-0 text-gray-600" >You can save a property by pressing on the favorites button. No need to login! </p>
            <button type="button" class="py-4 rounded bg-red-700 font-bold text-white w-full m-2 md:w-1/4 mt-6 hover:bg-blue-700 anim">Go to searchpage</button>

            <img class="mt-10 w-2/3" src="/assets/vector/favorite.svg" alt="Steps on how to save a property to my favorites">
        </main>

    {{/if}}

