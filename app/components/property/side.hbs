<div class="bg-light-gray">
    <section class="container flex flex-col gap-6 py-16 lg:flex-row">
        <div class="flex flex-col gap-6 lg:w-2/3">
            <article class="bg-white px-12 py-6 rounded shadow-sm  b-gray-alt">
                <div class="flex justify-between h-auto ">
                    <h2 class="font-bold text-xl text-gray-900 py-3"> Description</h2>
                    <img src="/assets/vector/down-arrow-black.svg " alt="black down pointing arrow" class="anim md:hidden {{unless this.dcptState "transform rotate-180"}}">
                </div>
                <p class="text-sm {{if this.dcptState "hidden" "block my-6"}}">{{ safe-string @estate.data.[0].ShortDescription  }}</p>
            </article>
            <div class="grid grid-cols-2 gap-6">
                 <article class="bg-white px-6 py-6 rounded shadow-sm  b-gray-alt">
                    <div class="flex flex-col justify-between h-auto ">
