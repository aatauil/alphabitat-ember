<div class="bg-light-gray">
  <section class="container flex flex-col gap-6 py-16 lg:flex-row">
    <div class="flex flex-col gap-6 lg:w-2/3">
      {{#if @estate.title.[0].Subdetails.[0].Value}}
      <article class="bg-white px-10 py-3 text-center rounded b-gray-alt">
        <h1 class="font-bold text-xl text-gray-900 py-3">{{@estate.title.[0].Subdetails.[0].Value}}</h1>
      </article>
      {{/if}}
      {{#if @estate.data.[0].ShortDescription}}
      <article class="bg-white rounded b-gray-alt">
        <div class=" h-auto">
          <div class="flex px-6 md:px-8 py-4 md:py-5 justify-between b-gray-alt-bottom">
            <h2 class="font-bold text-xl text-gray-900 ">{{t "property.sub.description" }}</h2>
          </div>
        </div>
        <p class="text-sm p-6 md:px-8">
          {{ safe-string @estate.data.[0].ShortDescription }}</p>
      </article>
      {{/if}}
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <Property::Card @title={{t "property.sub.general" }} @list={{@estate.general}} />
        <Property::Card @title={{t "property.sub.interior" }} @list={{@estate.interior}} />
        <Property::Card @title={{t "property.sub.surfaces" }} @list={{@estate.surface}} />
        <Property::Card @title={{t "property.sub.energy" }} @list={{@estate.energy}} />
        <Property::Card @title={{t "property.sub.environment" }} @list={{@estate.environment}} />
      </div>

    </div>
    <div class="lg:w-1/3 relative">

      <form name="estate" method="POST"
        class=" row-span-3 col-span-1 bg-white flex flex-col gap-10 border sticky top-0">
        <input type="hidden" name="form-name" value="estate" />
        <label for="estateId" class="hidden">
          Estate ID
          <input type="text" hidden name="estateId" id="estateId" value={{@estate.data.[0].EstateID}}>
        </label>
        <div class=" px-10 py-8 flex justify-between items-center bg-gray-900 font-bold">
          <h2 class="text-2xl text-white ">Contact</h2>
          <p class="text-gray-600">ref {{@estate.data.[0].EstateID}}</p>
        </div>
        <div class=" px-10 py-5 mb-4">
          <div class=" tracking-wide text-black text-xs font-bold mb-6">
            <label for="reason">
              {{t "property.form.choose"}} <span class="text-red-700">*</span>
              <select name="reason" id="reason"
                class=" w-full text-black b-gray-alt bg-white mt-1 py-3 px-2 leading-tight focus:outline-none focus:bg-white focus:border-gray-500">
                <option value={{t "property.form.info" }}>{{t "property.form.info"}}</option>
                <option value={{t "property.form.info" }}>{{t "property.form.visit"}}</option>
                <option value={{t "property.form.info" }}>{{t "property.form.call"}}</option>
              </select>
            </label>
          </div>

          <div class="tracking-wide text-black text-xs font-bold h-auto  mb-6">
            <label for="name">
              {{t "property.form.name"}} <span class="text-red-700">*</span>
              <input
                class="appearance-none w-full rounded bg-light-gray text-black b-gray-alt mt-1 py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                name="name" id="name" type="input" placeholder="" required />
            </label>
          </div>

          <div class="tracking-wide text-black text-xs font-bold mb-6">
            <label for="email">
              {{t "property.form.mail"}}

              <span class="text-red-700">*</span>
              <input
                class="appearance-none w-full rounded bg-light-gray text-black b-gray-alt mt-1 py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                name="email" id="email" type="email" placeholder="" required />
            </label>
          </div>

          <div class="tracking-wide text-black text-xs font-bold mb-6">
            <label for="tel">
              {{t "property.form.number"}}
              <input
                class="appearance-none w-full rounded bg-light-gray text-black b-gray-alt mt-1 py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                name="tel" id="tel" type="tel" placeholder="">
            </label>
          </div>

          <div class=" tracking-wide text-black text-xs font-bold">
            <label for="message">
              {{t "property.form.message"}}
              <textarea name="message" id="message" rows="8"
                class="appearance-none w-full rounded bg-light-gray text-black b-gray-alt mt-1 py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500 resize-none"
                value=""></textarea>
            </label>
          </div>

        </div>
        <input type="submit" value={{t "property.form.send" }}
          class="bg-red-700 hover:bg-blue-700 text-white py-5 anim cursor-pointer ">
      </form>
    </div>
  </section>

</div>