<div class="bg-light-gray">
  <section class="container flex flex-col gap-6 py-16 lg:flex-row">
    <div class="flex flex-col gap-6 lg:w-2/3">
      <article class="bg-white px-10 py-3 text-center rounded b-gray">
        <h1 class="font-bold text-xl text-gray-900 py-3">{{@estate.title.[0].Subdetails.[0].Value}}</h1>
      </article>
      <Property::Card @title='Description'>
        <p class="text-sm p-6 md:px-8">
          {{ safe-string @estate.data.[0].ShortDescription  }}</p>
      </Property::Card>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <Property::Card @title="General">
          <ul class="text-sm p-6 md:px-8">
            {{#each @estate.general as |item|}}

            <li class="flex justify-between py-3 border-b"> <span
                class="capitalize text-gray-700">{{item.Name}}</span><span class="font-bold text-gray-700">
                {{item.Subdetails.[0].Value}}</span></li>
            {{/each}}
          </ul>
        </Property::Card>
        <Property::Card @title="Interior">
          <ul class="text-sm p-6 md:px-8">
            {{#each @estate.interior as |item|}}

            <li class="flex justify-between py-3 border-b"> <span
                class="capitalize text-gray-700">{{item.Name}}</span><span
                class="font-bold text-gray-700">{{item.Subdetails.[0].Value}}</span></li>
            {{/each}}
          </ul>
        </Property::Card>
        <Property::Card @title="Surfaces">
          <ul class="text-sm p-6 md:px-8">
            {{#each @estate.surface as |item|}}
            <li class="flex justify-between py-3 border-b "> <span
                class="capitalize text-gray-700">{{item.Name}}</span><span
                class="font-bold text-gray-700">{{item.Subdetails.[0].Value}} mÂ²</span></li>
            {{/each}}
          </ul>
        </Property::Card>
        <Property::Card @title="Energy">
          <ul class="text-sm p-6 md:px-8">
            {{#each @estate.energy as |item|}}
            <li class="flex justify-between py-3 border-b"> <span
                class="capitalize text-gray-700">{{item.Name}}</span><span
                class="font-bold text-gray-700">{{item.Subdetails.[0].Value}}</span></li>
            {{/each}}
          </ul>
        </Property::Card>

        <Property::Card @title="Environment">
          <ul class="text-sm p-6 md:px-8">
            {{#each @estate.environment as |item|}}
            <li class="flex justify-between py-3 border-b"> <span
                class="capitalize text-gray-700">{{item.Name}}</span><span
                class="font-bold text-gray-700">{{if (eq item.Subdetails.[0].Type "yes/no") "yes" item.Subdetails.[0].Value }}</span>
            </li>
            {{/each}}
          </ul>
        </Property::Card>


      </div>

    </div>
    <div class="lg:w-1/3 shadow-sm ">

      <form action="" class=" row-span-3 col-span-1 bg-white p-10 flex flex-col gap-5 rounded b-gray-alt">
        <h2 class="text-xl font-bold pb-6">I am interested!</h2>
        <label class=" tracking-wide text-black text-xs font-bold flex-1">
          Choose
          <select name="" id=""
            class="appearance-none w-full bg-light-gray text-black border border-gray-800 mt-1 py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500">
            <option value="">Ask for more information</option>
            <option value="">Ask for a visit</option>
            <option value="">Ask to be called back</option>
          </select>
        </label>

        <label class=" tracking-wide text-black text-xs font-bold flex-1">
          Message
          <textarea name="" id="" rows="8"
            class="appearance-none w-full bg-light-gray text-black border border-gray-800 mt-1 py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            value="">Hi,

                    I am interested in your property and I would like to get more information about it. 

                    Thank you.
                        
                    </textarea>
        </label>

        <label class="tracking-wide text-black text-xs font-bold flex-1">
          First Name
          <input
            class="appearance-none w-full bg-light-gray text-black border border-gray-800 mt-1 py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            id="grid-password" type="input" placeholder="">
        </label>

        <label class="tracking-wide text-black text-xs font-bold flex-1" for="grid-password">
          Last Name
          <input
            class="appearance-none w-full bg-light-gray text-black border border-gray-800 mt-1 py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            id="grid-password" type="input" placeholder="">
        </label>

        <label class="tracking-wide text-black text-xs font-bold flex-1" for="grid-password">
          E-mail
          <input
            class="appearance-none w-full bg-light-gray text-black border border-gray-800 mt-1 py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            id="grid-password" type="email" placeholder="">
        </label>

        <label class="tracking-wide text-black text-xs font-bold mb-4 flex-1" for="grid-password">
          Phone Number
          <input
            class="appearance-none w-full bg-light-gray text-black border border-gray-800 mt-1 py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            id="grid-password" type="tel" placeholder="">
        </label>
        <input type="submit" value="Send" class="bg-red-700 text-white py-3">
      </form>
    </div>
  </section>

</div>