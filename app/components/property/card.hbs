{{#if @list.length}}
  <article class="bg-white rounded b-gray-alt">
    <div class=" h-auto">
      <div class="flex px-6 md:px-8 py-4 md:py-5 justify-between b-gray-alt-bottom">
        <h2 class="font-bold text-xl text-gray-900 ">{{@title}}</h2>
      </div>
    </div>
    <ul class="text-sm p-6 md:px-8 divide-y">
      {{#each @list as |item| }}
        <li class="flex justify-between py-3"> <span
            class="capitalize text-gray-700">{{item.label}}</span>
          <span class="font-bold text-gray-700">{{type-checker item}} </span>
        </li>
      {{/each}}
    </ul>
  </article>
{{/if}}