<section
  class="fixed top-0 w-full xl:block xl:relative h-full left-0 z-30 xl:w-1/3 xl:mt-6 py-6 px-4 font-bold xl:rounded pb-32 xl:pb-12 overflow-scroll xl:overflow-hidden  {{if this.MobileFilter.filterState "hidden" "block bg-white"}}">
  <div class="md:container">
    <div class="flex justify-between items-center border-b pb-4">
      <h1 class="text-2xl text-gray-800">Filter</h1>
      <div class="flex">
        <LinkTo type="reset" @route="search" @query={{null}}
          class="bg-gray-200 text-gray-900 text-base font-bold py-2 px-5 rounded hover:bg-gray-800 hover:text-white anim">
          Reset
          filter</LinkTo>
        <button type="button" {{on 'click' this.MobileFilter.toggleFilter}}
          class="bg-gray-200 text-gray-900 text-base font-bold py-2 px-5 rounded block xl:hidden ml-3"><img
            src="/assets/vector/close.svg" alt="Black close icon"></button>

      </div>
    </div>

    <div class="mt-6">
      <h2 class="text-gray-600 py-2">Purpose</h2>
      <div class="flex flex-col pl-2 ">
        <label class="inline-flex items-center mt-3">
          <input type="radio" name="purpose" checked={{if (eq this.Purpose.buyRent 1) true }}
            {{on "change" (pipe (fn @refetch "buyRent" 1) this.Price.resetBudget (set this.Purpose.buyRent 1)) }} class="h-5 w-5 text-gray-600 "><span
            class="ml-4 text-gray-500">For sale</span>
        </label>
        <label class="inline-flex items-center mt-3">
          <input type="radio" name="purpose" checked={{if (eq this.Purpose.buyRent 2) true }} 
            {{on "change" (pipe (fn @refetch "buyRent" 2) this.Price.resetBudget (set this.Purpose.buyRent 2))}} class="h-5 w-5 text-gray-600"><span class="ml-4 text-gray-500">For
            rent</span>
        </label>

      </div>
    </div>

